<div class="container">
  <div class="d-flex justify-content-between mb-4 pt-4 align-items-center">
      <h1>All lists</h1>
      <%= link_to '+ New list', new_list_path, class: 'btn btn-primary' %>
  </div>
  <hr>
  <ul>
    <% @lists.each do |list| %>
      <li>
        <%= link_to "#{list.name}", list_path(list) %>
      </li>
    <% end %>
  </ul>
</div>
